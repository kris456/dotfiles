#!/bin/bash

echo "Installing linuxbrew"
sh -ck "$(curl -fsSL https://raw.githubusercontent.com/Linuxbrew/install/master/install.sh)"

echo "Adding linuxbrew to path"
test -d ~/.linuxbrew && eval $(~/.linuxbrew/bin/brew shellenv)
test -d /home/linuxbrew/.linuxbrew && eval $(/home/linuxbrew/.linuxbrew/bin/brew shellenv)
test -r ~/.bash_profile && echo "eval \$($(brew --prefix)/bin/brew shellenv)" >>~/.bash_profile
echo "eval \$($(brew --prefix)/bin/brew shellenv)" >>~/.profile

echo "Installing yadm"
brew install yadm fish

yadm clone https://github.com/kris456/dotfiles.git
source ~/.profile

sudo apt install gcc make

curl -fLok ~/.vim/autoload/plug.vim --create-dirs \
     https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

updateLinuxEnv

echo $(which fish) | sudo tee -a /etc/shells > /dev/null
chsh -s $(which fish)

curl -Lok ~/.config/fish/functions/fisher.fish --create-dirs https://git.io/fisher
fisher
